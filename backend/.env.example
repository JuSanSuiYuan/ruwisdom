# 儒智慧后端服务环境变量配置示例

# 服务器配置
PORT=3000
HOST=localhost
NODE_ENV=development

# 数据库配置
MONGO_URI=mongodb://localhost:27017/ruwisdom
MONGO_URI_TEST=mongodb://localhost:27017/ruwisdom-test

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# 微信小程序配置
WECHAT_APP_ID=your_wechat_appid
WECHAT_APP_SECRET=your_wechat_appsecret
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key

# AI服务配置
AI_API_KEY=your_ai_api_key
AI_API_URL=https://api.ai-service.com

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# 邮件配置
EMAIL_SERVICE=smtp.mailtrap.io
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=ruwisdom@example.com

# 短信服务配置
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret