/* 仪表盘页面样式 */

.dashboard-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #eeeeee;
}

.user-details {
  margin-left: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.user-role {
  font-size: 24rpx;
  color: #666666;
}

.top-actions {
  display: flex;
  align-items: center;
}

.notification-icon,
.settings-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.notification-icon image,
.settings-icon image {
  width: 48rpx;
  height: 48rpx;
}

.notification-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ff4d4f;
  color: #ffffff;
  font-size: 20rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  min-width: 36rpx;
}

/* 快捷功能区 */
.quick-functions {
  display: flex;
  flex-wrap: wrap;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.function-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  font-size: 50rpx;
}

.student-icon {
  background-color: #e6f7ff;
}

.homework-icon {
  background-color: #f6ffed;
}

.notification-icon {
  background-color: #fff7e6;
}

.analysis-icon {
  background-color: #fff2e8;
}

.schedule-icon {
  background-color: #f0f5ff;
}

.communication-icon {
  background-color: #f9f0ff;
}

.leave-icon {
  background-color: #fff1f0;
}

.leave-list-icon {
  background-color: #f6ffed;
}

.function-name {
  font-size: 24rpx;
  color: #333333;
  margin-top: 10rpx;
}

/* 数据统计卡片 */
.stats-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.more {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: normal;
}

.stats-cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.stat-card {
  width: 48%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.stat-content {
  flex: 1;
}

.stat-number {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
  display: block;
}

.stat-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  font-size: 40rpx;
}

/* 最近活动 */
.activities-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.activities-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f5ff;
  border-radius: 12rpx;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 28rpx;
  color: #333333;
  display: block;
}

.activity-time {
  font-size: 22rpx;
  color: #999999;
  margin-top: 6rpx;
  display: block;
}

.no-activities {
  text-align: center;
  padding: 60rpx 0;
  color: #999999;
  font-size: 28rpx;
}

/* 教师/家长专属区域 */
.special-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 待办列表 */
.todo-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.todo-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 50%;
  margin-right: 20rpx;
}

.todo-content {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.todo-time {
  font-size: 24rpx;
  color: #999999;
}

/* 子女动态 */
.children-activities {
  max-height: 300rpx;
  overflow-y: auto;
}

.child-activity {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.child-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.activity-detail {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

/* 响应式设计 */
@media screen and (max-width: 320px) {
  .function-item {
    width: 33.33%;
  }
  
  .stat-card {
    width: 100%;
  }
}

/* 滚动条样式 */
.activities-list::-webkit-scrollbar,
.todo-list::-webkit-scrollbar,
.children-activities::-webkit-scrollbar {
  width: 6rpx;
}

.activities-list::-webkit-scrollbar-track,
.todo-list::-webkit-scrollbar-track,
.children-activities::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

.activities-list::-webkit-scrollbar-thumb,
.todo-list::-webkit-scrollbar-thumb,
.children-activities::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3rpx;
}

.activities-list::-webkit-scrollbar-thumb:hover,
.todo-list::-webkit-scrollbar-thumb:hover,
.children-activities::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}