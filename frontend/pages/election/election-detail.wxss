/* election-detail.wxss */
.election-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.nav-bar {
  height: 100rpx;
  background-color: #3a8ee6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  color: #fff;
  font-size: 36rpx;
}

.nav-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.nav-right {
  width: 60rpx;
}

/* 内容区域 */
.election-content {
  padding: 120rpx 30rpx 30rpx 30rpx;
}

/* 加载状态 */
.loading-container {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3a8ee6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #888;
}

/* 基本信息 */
.basic-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.election-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.election-position {
  font-size: 28rpx;
  color: #3a8ee6;
  background-color: #e6f2ff;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
  margin-left: 15rpx;
}

.status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-text {
  font-size: 28rpx;
  color: #ff9d00;
  font-weight: 500;
}

.time-text {
  font-size: 26rpx;
  color: #666;
}

/* 描述和规则 */
.description-section,
.rules-section,
.permissions-section,
.candidates-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.description-text,
.rules-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 权限列表 */
.permissions-list {
  padding-left: 20rpx;
}

.permission-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.permission-icon {
  color: #3a8ee6;
  font-size: 32rpx;
  margin-right: 10rpx;
  line-height: 1.2;
}

.permission-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  line-height: 1.6;
}

/* 候选人列表 */
.candidate-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  position: relative;
}

.candidate-item.selected {
  border-color: #3a8ee6;
  background-color: #f0f8ff;
}

.candidate-item.voted {
  opacity: 0.8;
}

.candidate-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
  margin-right: 20rpx;
}

.candidate-avatar {
  width: 100%;
  height: 100%;
}

.candidate-details {
  flex: 1;
}

.candidate-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.candidate-slogan {
  font-size: 26rpx;
  color: #3a8ee6;
  margin-bottom: 8rpx;
  display: block;
}

.candidate-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.votes-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}

.votes-count {
  font-size: 30rpx;
  font-weight: bold;
  color: #3a8ee6;
  margin-bottom: 10rpx;
}

.vote-progress {
  width: 80rpx;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.vote-progress-bar {
  height: 100%;
  background-color: #3a8ee6;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.select-mark {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.select-mark.selected {
  background-color: #3a8ee6;
  border-color: #3a8ee6;
}

.check-icon {
  color: #fff;
  font-size: 24rpx;
}

/* 投票统计 */
.vote-stats {
  text-align: center;
  margin-bottom: 30rpx;
}

.stats-text {
  font-size: 28rpx;
  color: #666;
}

/* 投票按钮 */
.vote-action {
  padding: 0 30rpx;
  margin-bottom: 50rpx;
}

.vote-button {
  width: 100%;
  height: 90rpx;
  background-color: #3a8ee6;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  line-height: 90rpx;
  text-align: center;
}

.vote-button.disabled {
  background-color: #ccc;
  color: #fff;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media screen and (min-width: 768px) {
  .election-detail-container {
    max-width: 600px;
    margin: 0 auto;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  }
}