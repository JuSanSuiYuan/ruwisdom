/* 班干部竞选创建/编辑页面样式 */

.election-create-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.top-nav {
  padding: 20rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  display: block;
}

/* 表单区域 */
.form-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 100rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333333;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.picker-text {
  font-size: 30rpx;
  color: #333333;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 候选人表单 */
.candidate-form {
  background-color: #f9f9f9;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.add-candidate-button {
  background-color: #3a8ee6;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 100rpx;
  padding: 20rpx 0;
  margin-top: 10rpx;
}

/* 候选人列表 */
.candidates-list {
  margin-top: 20rpx;
}

.candidate-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background-color: #f9f9f9;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
}

.candidate-info {
  flex: 1;
}

.candidate-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 10rpx;
}

.candidate-slogan {
  font-size: 28rpx;
  color: #3a8ee6;
  display: block;
  margin-bottom: 10rpx;
}

.candidate-description {
  font-size: 26rpx;
  color: #666666;
  display: block;
  line-height: 1.5;
}

.delete-candidate-button {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  margin-left: 20rpx;
}

/* 底部操作按钮 */
.action-buttons {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
}

.cancel-button {
  flex: 1;
  background-color: #f5f5f5;
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 100rpx;
  margin-right: 20rpx;
}

.submit-button {
  flex: 1;
  background-color: #3a8ee6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 100rpx;
}

/* 响应式设计 */
@media screen and (max-width: 320px) {
  .action-buttons {
    flex-direction: column;
  }
  
  .cancel-button {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
}