/* 系统设置页面样式 */
.system-settings-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航栏 */
.top-nav {
  background-color: #1989fa;
  color: white;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.nav-title {
  font-size: 18px;
  font-weight: 500;
}

/* 设置选项卡 */
.settings-tabs {
  display: flex;
  background-color: white;
  border-bottom: 1px solid #e5e5e5;
}

.tab {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  font-size: 16px;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1989fa;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 3px;
  background-color: #1989fa;
}

/* 选项卡内容 */
.tab-content {
  flex: 1;
  overflow-y: auto;
  padding: 10px;
}

/* 设置项 */
.setting-item {
  background-color: white;
  padding: 12px 16px;
  margin-bottom: 10px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.setting-label {
  font-size: 15px;
  color: #333;
}

.setting-value {
  display: flex;
  align-items: center;
}

.setting-value input {
  text-align: right;
  font-size: 15px;
  color: #666;
  padding: 6px 0;
  width: 200px;
}

.date-picker,
.picker-view {
  display: flex;
  align-items: center;
  color: #666;
}

.date-picker image,
.picker-view image {
  width: 12px;
  height: 12px;
  margin-left: 6px;
}

/* 保存按钮 */
.save-button-container {
  margin-top: 20px;
  padding: 0 16px;
}

.save-button {
  background-color: #1989fa;
  color: white;
  border-radius: 20px;
  margin: 0;
  font-size: 16px;
}

/* 列表样式 */
.calendar-actions,
.holiday-actions {
  margin-bottom: 10px;
}

.add-button {
  background-color: #1989fa;
  color: white;
  border-radius: 20px;
  margin: 0;
  font-size: 15px;
}

.calendar-list,
.holiday-list {
  background-color: white;
  border-radius: 8px;
}

.calendar-item,
.holiday-item {
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.calendar-item:last-child,
.holiday-item:last-child {
  border-bottom: none;
}

.calendar-info,
.holiday-info {
  margin-bottom: 8px;
}

.calendar-title,
.holiday-name {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  display: block;
}

.calendar-date,
.holiday-period {
  font-size: 13px;
  color: #999;
  margin-top: 4px;
  display: block;
}

.holiday-desc {
  font-size: 14px;
  color: #666;
  margin-top: 4px;
  display: block;
}

.calendar-actions,
.holiday-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 8px;
}

.edit-button {
  font-size: 14px;
  color: #1989fa;
  background-color: transparent;
  padding: 0 10px;
  margin-right: 10px;
}

.delete-button {
  font-size: 14px;
  color: #ff4d4f;
  background-color: transparent;
  padding: 0 10px;
}

/* 无数据提示 */
.no-events,
.no-holidays {
  padding: 40px 0;
  text-align: center;
  color: #999;
}

/* 弹窗样式 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.dialog {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  border-radius: 16px 16px 0 0;
  z-index: 1001;
  max-height: 80vh;
  overflow-y: auto;
}

.dialog-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.dialog-header text {
  font-size: 17px;
  font-weight: 500;
}

.close-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon image {
  width: 16px;
  height: 16px;
}

.dialog-content {
  padding: 16px;
}

.form-item {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.form-item input {
  width: 100%;
  padding: 10px;
  border: 1px solid #e5e5e5;
  border-radius: 6px;
  font-size: 15px;
}

.form-item textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #e5e5e5;
  border-radius: 6px;
  font-size: 15px;
  min-height: 80px;
}

.dialog-footer {
  display: flex;
  padding: 16px;
  border-top: 1px solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  margin: 0 8px;
  border-radius: 6px;
  font-size: 16px;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #1989fa;
  color: white;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .setting-value input {
    width: 150px;
  }
  
  .dialog-header {
    padding: 12px 16px;
  }
  
  .dialog-content {
    padding: 12px 16px;
  }
  
  .dialog-footer {
    padding: 12px 16px;
  }
}