/* 用户管理页面样式 */

.user-management-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.search-icon,
.add-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
}

.search-icon image,
.add-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 筛选条件 */
.filter-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-tabs {
  display: flex;
  overflow-x: auto;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.filter-tab {
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
}

.filter-tab.active {
  background-color: #1aad19;
  color: #fff;
}

.status-filter {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.status-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.status-picker text {
  font-size: 28rpx;
  color: #333;
}

.status-picker image {
  width: 30rpx;
  height: 30rpx;
}

/* 用户列表 */
.user-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-items {
  max-height: 800rpx;
  overflow-y: auto;
}

.user-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.user-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.user-name-role {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.user-role-tag {
  padding: 4rpx 16rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.user-account,
.user-phone {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
  display: block;
}

.user-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-badge {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-badge.active {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-badge.inactive {
  background-color: #f5f5f5;
  color: #999;
}

.status-badge.suspended {
  background-color: #fff2e8;
  color: #fa8c16;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.edit-button,
.delete-button {
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  margin-left: 16rpx;
  border-radius: 6rpx;
}

.edit-button {
  background-color: #1aad19;
  color: #fff;
}

.delete-button {
  background-color: #f5222d;
  color: #fff;
}

.no-users {
  text-align: center;
  padding: 80rpx 20rpx;
}

.no-users image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.no-users text {
  font-size: 28rpx;
  color: #999;
}

/* 分页 */
.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.page-info {
  font-size: 26rpx;
  color: #666;
}

.page-buttons {
  display: flex;
  align-items: center;
}

.page-btn {
  margin-left: 20rpx;
  padding: 8rpx 24rpx;
  font-size: 26rpx;
  background-color: #1aad19;
  color: #fff;
  border-radius: 6rpx;
}

.page-btn[disabled] {
  background-color: #f0f0f0;
  color: #999;
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-bar input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-button,
.cancel-button {
  margin-left: 20rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
}

.search-button {
  background-color: #1aad19;
  color: #fff;
}

.cancel-button {
  background-color: #f0f0f0;
  color: #666;
}

/* 弹窗 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
}

.dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 999;
  overflow: hidden;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.dialog-header text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon image {
  width: 40rpx;
  height: 40rpx;
}

.dialog-content {
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-item input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.picker-view image {
  width: 30rpx;
  height: 30rpx;
}

.dialog-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 6rpx;
}

.cancel-btn {
  margin-right: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background-color: #1aad19;
  color: #fff;
}