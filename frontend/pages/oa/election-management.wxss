/* 班干部竞选管理页面样式 */

.election-management-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.top-nav {
  padding: 20rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

/* 操作栏 */
.action-bar {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.create-button {
  background-color: #3a8ee6;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 100rpx;
  padding: 20rpx 0;
}

/* 竞选列表 */
.election-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 0;
  color: #999999;
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-state text {
  display: block;
  color: #999999;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.empty-button {
  background-color: #3a8ee6;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 100rpx;
  padding: 20rpx 40rpx;
}

/* 竞选列表项 */
.election-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  transition: all 0.3s ease;
}

.election-item:last-child {
  border-bottom: none;
}

.election-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

/* 顶部信息 */
.election-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.election-title-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.election-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.election-position {
  font-size: 28rpx;
  color: #3a8ee6;
  background-color: #e6f2ff;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
  margin-left: 15rpx;
}

.election-class {
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 6rpx 20rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-ongoing {
  background-color: #fff7e6;
  color: #ff9d00;
}

.status-ended {
  background-color: #f0f0f0;
  color: #888;
}

.status-upcoming {
  background-color: #e6f2ff;
  color: #3a8ee6;
}

/* 时间信息 */
.election-time {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.time-text {
  font-size: 26rpx;
  color: #666;
}

/* 统计信息 */
.election-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stats-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 操作按钮 */
.election-actions {
  display: flex;
  justify-content: flex-end;
}

.detail-button {
  margin-right: 15rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 24rpx;
}

.edit-button {
  margin-right: 15rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 24rpx;
}

.publish-button {
  margin-right: 15rpx;
  background-color: #faad14;
  color: #fff;
  font-size: 24rpx;
}

.delete-button {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
}

/* 响应式设计 */
@media screen and (max-width: 320px) {
  .election-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .election-title-info {
    margin-bottom: 10rpx;
  }
  
  .election-time {
    flex-direction: column;
  }
  
  .election-stats {
    flex-direction: column;
  }
  
  .election-actions {
    flex-wrap: wrap;
  }
  
  .election-actions button {
    margin-bottom: 10rpx;
  }
}