/* 班干部竞选详情页面样式 */

.election-detail-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.top-nav {
  padding: 20rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  display: block;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 200rpx 0;
  color: #999999;
  font-size: 32rpx;
}

/* 错误状态 */
.error-state {
  text-align: center;
  padding: 200rpx 0;
  color: #999999;
  font-size: 32rpx;
}

.back-button {
  background-color: #3a8ee6;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 100rpx;
  padding: 20rpx 40rpx;
  margin-top: 40rpx;
}

/* 详情内容 */
.detail-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 基本信息 */
.basic-info-section {
  margin-bottom: 30rpx;
  position: relative;
}

.election-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.election-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.election-position {
  font-size: 28rpx;
  color: #3a8ee6;
  background-color: #e6f2ff;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
  margin-left: 15rpx;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 6rpx 20rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-ongoing {
  background-color: #fff7e6;
  color: #ff9d00;
}

.status-ended {
  background-color: #f0f0f0;
  color: #888;
}

.status-upcoming {
  background-color: #e6f2ff;
  color: #3a8ee6;
}

.election-info {
  margin-top: 30rpx;
}

.info-item {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

/* 职位权限 */
.permissions-section {
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.permissions-list {
  background-color: #f9f9f9;
  border-radius: 20rpx;
  padding: 20rpx;
}

.permission-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.permission-item:last-child {
  margin-bottom: 0;
}

.permission-icon {
  font-size: 30rpx;
  color: #3a8ee6;
  margin-right: 10rpx;
  margin-top: 5rpx;
}

.permission-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 候选人投票结果 */
.candidates-section {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.candidates-list {
  margin-top: 20rpx;
}

.candidate-item {
  background-color: #f9f9f9;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.candidate-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.avatar-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.candidate-avatar {
  width: 100%;
  height: 100%;
}

.candidate-details {
  flex: 1;
}

.candidate-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 10rpx;
}

.candidate-slogan {
  font-size: 28rpx;
  color: #3a8ee6;
  display: block;
  margin-bottom: 10rpx;
}

.candidate-description {
  font-size: 26rpx;
  color: #666666;
  display: block;
  line-height: 1.5;
}

.votes-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.votes-count {
  font-size: 30rpx;
  font-weight: bold;
  color: #3a8ee6;
}

.votes-percentage {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.votes-progress {
  width: 100%;
  height: 20rpx;
  background-color: #e8e8e8;
  border-radius: 100rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #3a8ee6;
  border-radius: 100rpx;
  transition: width 0.3s ease;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.export-button {
  background-color: #3a8ee6;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 100rpx;
  padding: 20rpx 60rpx;
}

/* 响应式设计 */
@media screen and (max-width: 320px) {
  .election-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .election-position {
    margin-left: 0;
    margin-top: 10rpx;
  }
  
  .status-tag {
    position: static;
    margin-bottom: 20rpx;
    display: inline-block;
  }
}