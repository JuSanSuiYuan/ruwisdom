/* 登录页面样式 */

/* 登录容器 */
.login-container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo容器 */
.logo-container {
  margin: 60rpx 0 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #999999;
}

/* 表单容器 */
.form-container {
  width: 100%;
}

/* 角色选择器 */
.role-selector {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.role-item {
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 28rpx;
}

.role-item.active {
  background-color: #1aad19;
  color: #ffffff;
}

/* 输入框样式 */
.input-item {
  position: relative;
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 92rpx;
  padding: 0 30rpx 0 90rpx;
  border: 2rpx solid #dddddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.input-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.eye-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

/* 记住密码 */
.remember-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.checkbox {
  display: flex;
  align-items: center;
}

.checkbox-inner {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #dddddd;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}

.checkbox-inner.checked {
  background-color: #1aad19;
  border-color: #1aad19;
}

.check-icon {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.checkbox-text {
  font-size: 28rpx;
  color: #666666;
}

.forgot-password {
  font-size: 28rpx;
  color: #1aad19;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #1aad19;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.login-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}

/* 其他登录方式 */
.other-login {
  text-align: center;
}

.divider-text {
  position: relative;
  display: inline-block;
  font-size: 26rpx;
  color: #999999;
  padding: 0 20rpx;
}

.divider-text::before,
.divider-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 120rpx;
  height: 1rpx;
  background-color: #dddddd;
}

.divider-text::before {
  left: -120rpx;
}

.divider-text::after {
  right: -120rpx;
}

.login-methods {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.method-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 40rpx;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.method-item text {
  font-size: 26rpx;
  color: #666666;
}

/* 用户协议 */
.agreement-container {
  position: absolute;
  bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.agreement-text {
  color: #999999;
}

.agreement-link {
  color: #1aad19;
  margin: 0 8rpx;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background-color: #ffffff;
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333333;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}