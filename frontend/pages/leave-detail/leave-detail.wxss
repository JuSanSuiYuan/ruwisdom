/* 请假申请详情页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 32rpx;
}

.detail-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-section {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #666;
  width: 180rpx;
}

.value {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  word-break: break-all;
}

.status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.status-pending {
  background-color: #fff3cd;
  color: #856404;
}

.status-approved {
  background-color: #d4edda;
  color: #155724;
}

.status-rejected {
  background-color: #f8d7da;
  color: #721c24;
}

.section-title {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.reason-section {
  margin-bottom: 40rpx;
}

.reason-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
}

.approval-section {
  margin-bottom: 40rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-edit {
  flex: 1;
  margin-right: 20rpx;
  background-color: #1aad19;
  color: #fff;
  border-radius: 8rpx;
  font-size: 34rpx;
}

.btn-delete {
  flex: 1;
  margin-left: 20rpx;
  background-color: #e64340;
  color: #fff;
  border-radius: 8rpx;
  font-size: 34rpx;
}

.error-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.error-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.back-btn {
  width: 80%;
  margin: 0 auto;
  background-color: #1aad19;
  color: #fff;
  border-radius: 8rpx;
  font-size: 34rpx;
}